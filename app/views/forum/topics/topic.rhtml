<div class='admin_content'>
<% admin_form_for :topic, @topic, :html => { :class => 'admin_form' } do |f| -%>
<%= f.text_field :subject, :vertical => true, :required => true %>
<%= f.text_field :posted_by, :vertical => true %>
<%= f.check_boxes :sticky, [['Forum topic is sticky', true]], :vertical => true, :single => true %>
<%= f.submit_tag 'Create Topic', :vertical => true%>
<% end -%>
</div>
